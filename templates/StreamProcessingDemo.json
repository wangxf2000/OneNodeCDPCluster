                "hbase-REGIONSERVER-BASE", 
                "hdfs-BALANCER-BASE", 
                "hdfs-DATANODE-BASE", 
                "hdfs-NAMENODE-BASE", 
                "hdfs-SECONDARYNAMENODE-BASE", 
